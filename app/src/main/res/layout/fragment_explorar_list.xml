<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExplorarListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="start|top"
        android:background="@color/ash_gray_alpha_transparent">

        <!--    <androidx.cardview.widget.CardView-->
        <!--        android:id="@+id/cardView"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="50dp"-->
        <!--        android:layout_gravity="top"-->
        <!--        app:cardBackgroundColor="@color/ash_gray_alpha"-->
        <!--        app:cardCornerRadius="0dp"-->
        <!--        app:cardElevation="0dp">-->

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginStart="1dp"
            android:background="@drawable/search_bar"
            android:closeIcon="@drawable/ic_cross"
            android:elevation="4dp"
            android:searchIcon="@drawable/ic_magnifying_glass"
            android:theme="@style/SearchView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filtro"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_settings__1_" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lista"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_list" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_route" />

</androidx.appcompat.widget.LinearLayoutCompat>